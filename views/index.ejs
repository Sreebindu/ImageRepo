<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Mod</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"s>

</head>
<body>
    <main class="container">
        <form id="form">
            <div class="mb-3">
                <label class="form-label">Select an Image</label>
                <input type="file" class="form-control" name="image" id="image">
            </div>
            <div class="mb-3">
                <label class="form-label">Operations</label>
                <input type="text" class="form-control" name="operations" id="image">
                <div class="form-text">example: GREYSCALE|ROTATE45</div>
            </div>
            <div class="mb-3">
                <input id="submit" type="button" class="btn btn-primary" value="Submit">
                <div class="form-text" id="loading"></div>
            </div>
        </form>

        <div class="row">
            <div class="col-6">
                <h5>Available operations</h5>
                <ul>
                    <li>ROTATE45</li>
                    <li>GREYSCALE</li>
                    <li>FLIP_HORIZONTAL</li>
                    <li>FLIP_VERTICAL</li>
                    <li>RESIZE,100,100</li>
                    <li>LEFT_ROTATE</li>
                    <li>RIGHT_ROTATE</li>
                </ul>
            </div>
            <div class="col-6">
                <img id="output" src="" alt="" style="max-width: 100%;">
            </div>
        </div>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $('#submit').click(() => {
            $('#loading').text("processing...");
            fetch('/img-mod', {method: 'POST', body: new FormData(document.querySelector("#form"))})
            .then(res => res.json())
            .then(res => {
                console.log(res)
                $('#output').attr('src', `${location.origin}${res.url}`)
                $('#loading').text("");
            })
            .catch(err => {
                console.log(err);
                alert('something went wrong');
                $('#loading').text("");
            })
        })
    </script>
</body>
</html>